<h2>Options</h2>
<hr>

<div class="row">
    <div class='col-md-2 sidebar'>
        <ul class="nav nav-pills nav-stacked">
            <li role="presentation" <% if params[:category] == nil %> class="active" <% end %> >
                <a href="?">All Options</a>
            </li>
            <hr>
            <% @categorys.each do |c| %>
                <li role="presentation" <% if params[:category] == c %> class="active" <% end %>>
                    <a href="?category=<%= c %>">
                        <%= c %>
                    </a>
                </li>
            <% end %>
        </ul>
        <hr>
        <%= link_to new_option_path do %>
             <button type="button" class="btn btn-success">New Option</button>
        <% end %>
    </div>
    
    <div class='col-md-10'>
        
        <div class="navbar navbar-default">
          <%#-  http://www.jorgecoca.com/buils-search-form-ruby-rails/  %>
          <%= form_tag(all_options_path, :method => "get", class: "navbar-form", id: "search-form") do %>
            <div class="input-group">
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Options" %>
              <span class="input-group-btn">
                <button class="btn" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
              </span>
            </div>
          <% end %>
        </div>
        
        <%= render "shared/options/table" %>
        
    </div>
</div>
