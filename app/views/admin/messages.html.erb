<h2>Messages</h2>
<hr><br>

<% @messages.each do |m| %>
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= m.created_at %></h3>
      </div>
      <div class="panel-body">
             <dl class="dl-horizontal">
              <dt>Sender</dt>
              <dd><%= m.sender_name %></dd>
            </dl>
            
             <dl class="dl-horizontal">
              <dt>Email</dt>
              <dd><%= m.sender_email %></dd>
            </dl>
            
             <dl class="dl-horizontal">
              <dt>Message</dt>
              <dd><%= m.message_text %></dd>
            </dl>
      </div>
    </div>

<% end %>