<h2>Edit</h2>
<hr>

<%= form_for(@option, html: { multipart:true }) do |f| %>

    <label>Option Name</label>
    <div class="form-group">
        <%= f.text_field :name, :placeholder => "Option name", :class => "form-control" %>
    </div>
    
    <label>Category</label>
    <div class="form-group">
        <%= f.text_field :category, :placeholder => "Category", :class => "form-control" %>
    </div>
    
    <br>
    <label>3D File</label>
    <%= f.file_field :file %>
    <br>
    
    <%= f.submit "Update", class: "btn btn-primary" %>
    
<% end %>

<%= link_to option_path(@option), method: "delete" do %>
    <button type="button" class="btn btn-danger">Delete</button>
<% end %>